// Softer cursor for paper aesthetic
.cursor-default::before,
.cursor-input::before,
.cursor-active::before {
    :global(html.light) & {
        filter: brightness(0.7) contrast(1.1);
    }
}

// Fade animations adapt for paper
.fade-a,
.fade-b {
    :global(html.light) & {
        animation-timing-function: ease-in-out;
    }
}
